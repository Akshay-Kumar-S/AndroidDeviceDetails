<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="593dp"
        android:background="@color/black_overlay"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/cellular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="52dp"
                android:padding="6dp"
                android:paddingStart="5dp"
                android:text="CELLULAR"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeCellular"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="64dp"
                android:layout_marginTop="2dp"
                app:faceColor="@color/black"
                app:initialValue="-75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lowerText="lte"
                app:maxValue="-50"
                app:minValue="-150"
                app:needleColor="@color/soti_coral"
                app:scaleColor="@color/green"
                app:totalNicks="120"
                app:upperText="-90dbm"
                app:valuePerNick="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/gaugeWifi"
            app:layout_constraintTop_toBottomOf="@+id/gaugeCellular" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:padding="6dp"
                android:paddingStart="25dp"
                android:text="WIFI"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.nitri.gauge.Gauge
                android:id="@+id/gaugeWifi"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="1dp"
                app:faceColor="@color/black"
                app:initialValue="-100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lowerText="bandwidth"
                app:maxValue="0"
                app:minValue="-100"
                app:needleColor="@color/soti_coral"
                app:scaleColor="@color/green"
                app:totalNicks="120"
                app:upperText="value"
                app:valuePerNick="1" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
